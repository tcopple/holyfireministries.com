<!DOCTYPE html>
%html
  %head
    %title Holyfire Ministries
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

    %script{ type: 'text/javascript'}
      var gOverride = {
      urlBase: 'http://gridder.andreehansson.se/releases/latest/',
      gColor: '#EEEEEE',
      gColumns: 16,
      gOpacity: 0.55,
      gWidth: 10,
      pColor: '#C0C0C0',
      pHeight: 15,
      pOffset: 0,
      pOpacity: 0.55,
      center: true,
      gEnabled: true,
      pEnabled: true,
      setupEnabled: true,
      fixFlash: true,
      size: 960
      };

  %body
    %wrapper
      %main
        %header
          = render 'shared/header'
        %content
          = yield
        %footer
          = render 'shared/footer'
